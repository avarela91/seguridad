@model seguridad.Models.LoginModel

@{
    ViewBag.Title = "Iniciar sesión";
    Layout = "~/Views/Shared/_LayoutLogIn.cshtml";
}


@*<div class="Logo">
        <img src="~/Content/logo-negro-sin-fondo.png" />
    </div>*@
<section class="loginForm">

    @using (Html.BeginForm(new { ReturnUrl = ViewBag.ReturnUrl }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true)
        <hgroup class="title">
            <h1>@ViewBag.Title.</h1>
        </hgroup>
        <div>
            @Html.LabelFor(m => m.UserName)
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @width = "100%" })
            @Html.ValidationMessageFor(m => m.UserName)
        </div>
        <div>
            @Html.LabelFor(m => m.Password)
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @width = "100%" })
            @Html.ValidationMessageFor(m => m.Password)
        </div>
        <br />

        <input type="submit" value="Iniciar sesión" class="btn btn-success" style="width:100%" />
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

