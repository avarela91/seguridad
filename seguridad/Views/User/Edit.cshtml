@model ET.User

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="panel panel-default grid">
    <div class="panel-heading">
        <div class="row">
            <div class="col-xs-6">
                <h3 class="panel-title">
                    <i class="icon-building"></i>
                    Editar Usuario
                </h3>
            </div>
        </div>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("Edit", "User", FormMethod.Post, new { id = "edit-user-form", enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            @Html.HiddenFor(model => model.Id_User)
            @Html.HiddenFor(model => model.Create_User)
            @Html.HiddenFor(model => model.Create_Date)
            @Html.HiddenFor(model => model.Modify_User)
            @Html.HiddenFor(model => model.Modify_Date)
            @Html.HiddenFor(model => model.Active)

        <div class="form-horizontal">
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Nombre del Usuario", @required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "error" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.UserName)
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", @placeholder = "Usuario" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "error" })
                </div>
            </div>
            <br />
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Password)
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Contraseña", @Value = Model.Password })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "error" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Telefono)
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", @placeholder = "Telefono" })
                    @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "error" })
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(m => m.Supervisor)
                    @Html.TextBoxFor(m => m.Supervisor, new { @class = "form-control", @placeholder = "Contacto del Supervisor" })
                    @Html.ValidationMessageFor(m => m.Supervisor, "", new { @class = "error" })
                </div>
            </div>
        </div>
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-3 col-md-offset-6">
                        <br />
                        @Html.ActionLink("Cancelar", "Index", "", new { @class = "form-control btn-info", @style = "text-align:center" })
                    </div>
                    <div class="col-md-3">
                        <br />
                        <input type="submit" value="Modificar" class="form-control btn-success" />
                    </div>
                </div>
            </div>
        }
    </div>
</div>

